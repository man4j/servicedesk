        <profile>
			<!-- проверяем успешность gwt компиляции -->
            <id>gwt-compilation-verify</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-verifier-plugin</artifactId>
                        <version>1.0</version>
                        <configuration>
                            <verificationFile>verifications.xml</verificationFile>
                        </configuration>
                        <executions>
                            <execution>
                                <id>gwt-end-compilation-verify</id>
                                <phase>prepare-package</phase>
                                <goals>
                                    <goal>verify</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>war-coverage</id>
            <build>
                <plugins>
                    <plugin>
						<!-- Собираем пропатченный war, на предыдущих шагах некоторые jar были
							пропатчены -->
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>1.6</version>
                        <executions>
                            <execution>
                                <id>build</id>
                                <phase>package</phase>
                                <configuration>
                                    <property name="basedir" value="${basedir}" />
                                    <property name="project.version" value="${project.version}" />
                                    <target name="buildwar">
                                        <war basedir="${basedir}/target/sdng-war" destfile="target/sdng-war-${project.version}.war"
                                            webxml="${basedir}/target/sdng-war/WEB-INF/web.xml">
                                            <exclude name="WEB-INF/**/*.jar" />
                                            <webinf dir="${basedir}/target/sdng-war/WEB-INF/">
                                                <include name="**/*.jar" />
                                            </webinf>
                                        </war>
                                    </target>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

