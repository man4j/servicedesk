    <description>WAR модуль для базовой конфигурации SD</description>
    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>gwt-maven-plugin</artifactId>
                <configuration>
                    <webappDirectory>${basedir}/src/main/webapp</webappDirectory>
<!-- 					<webappDirectory>${project.build.directory}/sdng-war</webappDirectory> -->
                    <timeOut>${gwt.timeout}</timeOut>
                    <testTimeOut>${gwt.timeout}</testTimeOut>
                    <gwtVersion>${gwt.version}</gwtVersion>
                    <compileReport>${gwt.compileReport}</compileReport>
                    <localWorkers>${gwt.compiler.localWorkers}</localWorkers>
                    <runTarget>index.jsp</runTarget>
                    <precompile>false</precompile>
                    <codeServerPort>9876</codeServerPort>
                    <codeServerWorkDir>${basedir}/target/.sdm/</codeServerWorkDir>
                    <modules>
                        <module>ru.naumen.war.admin.Admin</module>
                        <module>ru.naumen.war.operator.Operator</module>
                        <module>ru.naumen.war.chat.Chat</module>
                    </modules>
                    <compileSourcesArtifacts>
                        <compileSourcesArtifact>ru.naumen:sdng-generated</compileSourcesArtifact>
                        <compileSourcesArtifact>ru.naumen:sdng</compileSourcesArtifact>
                        <compileSourcesArtifact>ru.naumen:script-api</compileSourcesArtifact>
                        <compileSourcesArtifact>ru.naumen:commons-util</compileSourcesArtifact>
                        <compileSourcesArtifact>ru.naumen:cti</compileSourcesArtifact>
                        <compileSourcesArtifact>ru.naumen:workload</compileSourcesArtifact>
                        <compileSourcesArtifact>ru.naumen:cmdb</compileSourcesArtifact>
                        <compileSourcesArtifact>ru.naumen:admin-lite</compileSourcesArtifact>
                        <compileSourcesArtifact>ru.naumen:sdng-mobile</compileSourcesArtifact>
                        <compileSourcesArtifact>ru.naumen:livechat</compileSourcesArtifact>
                        <compileSourcesArtifact>ru.naumen:sdng-inject</compileSourcesArtifact>
                    </compileSourcesArtifacts>
                </configuration>
                <executions>
                    <execution>
                        <id>gwtCompile</id>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>gwtClean</id>
                        <goals>
                            <goal>clean</goal>
                        </goals>
                        <phase>clean</phase>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.jasig.mojo.jspc</groupId>
                <artifactId>jspc-maven-plugin</artifactId>
                <version>2.0.0</version>
                <executions>
                    <execution>
                        <id>default</id>
                        <phase>install</phase>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <source>1.7</source>
                    <target>1.7</target>
                </configuration>

				<!-- Use the Tomcat 7 JSP compiler -->
                <dependencies>
                    <dependency>
                        <groupId>org.jasig.mojo.jspc</groupId>
                        <artifactId>jspc-compiler-tomcat7</artifactId>
                        <version>2.0.0</version>
                    </dependency>
                </dependencies>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>${maven.war.plugin.version}</version>
                <configuration>
                    <webappDirectory>${project.build.directory}/${war-default.folder}</webappDirectory>
                    <warName>${war.name}</warName>
                    <archive><!-- Дополнительная информация в MANIFEST.MF -->
                        <manifest>
                            <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                            <addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
                        </manifest>
                        <manifestEntries>
                            <fullVersion>${project.version}.${env.VERSION_BUILD_NUMBER}.${env.VERSION_BUILD_ID}.${env.SVN_REVISION}</fullVersion>
                            <buildId>${env.VERSION_BUILD_ID}</buildId>
                            <buildNumber>${env.VERSION_BUILD_NUMBER}</buildNumber>
                            <jobName>${env.JOB_NAME}</jobName>
                            <revision>${env.SVN_REVISION}</revision>
                        </manifestEntries>
                    </archive>
                    <warSourceExcludes>
                        **/.gitignore
                    </warSourceExcludes>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-eclipse-plugin</artifactId>
                <configuration>
                    <additionalBuildcommands>
                        <buildCommand>
                            <name>com.google.gwt.eclipse.core.gwtProjectValidator</name>
                            <arguments>
                            </arguments>
                        </buildCommand>
                    </additionalBuildcommands>
                    <additionalConfig>
                        <file>
                            <name>.settings/com.google.gdt.eclipse.core.prefs</name>
							<!-- Внимание! Содержимое тега content не должно содержать в начале
								строк пробелов -->
                            <content><![CDATA[
eclipse.preferences.version=1
jarsExcludedFromWebInfLib=
warSrcDir=target/sdng-war
warSrcDirIsOutput=true
]]>
                            </content>
                        </file>
                    </additionalConfig>
                    <additionalProjectnatures>
                        <projectnature>com.google.gwt.eclipse.core.gwtNature</projectnature>
                    </additionalProjectnatures>
                </configuration>
            </plugin>
        </plugins>
    </build>

